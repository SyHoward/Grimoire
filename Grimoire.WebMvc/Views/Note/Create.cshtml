@model Grimoire.Models.Note.NoteCreate

@{
    ViewData["Title"] = "New Note";
}

@if (TempData["ErrorMsg"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>ERROR:</strong> @TempData["ErrorMsg"]
        <button type="button" class="btn-close" data-bs-dimiss="alert" aria-label="Close"></button>
    </div>
}

<h1 class="display-4">Create a new note</h1>
<hr>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form asp-action="Create" method="post" class="row g-3">
    <div class="input">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" id="NoteTitle">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="input">
        <label asp-for="Body" class="form-label"></label>
        <input asp-for="Body" class="form-control" id="NoteBody" style="height: 100px">
        <span asp-validation-for="Body" class="text-danger"></span>
    </div>
    <div class="col d-flex justify-content-between align-items-baseline">
        <a asp-action="Index">Back to List</a>
        <input type="submit" value="Create" class="btn btn-primary float-end">
    </div>
</form>