@model List<Grimoire.Models.User.UserDeityAdd>

@{
    ViewData["Title"] = "User Deities";
}

<div class="d-flex justify-content-between align-items-center mb-2">
    <h1 class="display-4">Add Deities for @User.Identity?.Name</h1>
</div>
<form method="post">
    <table class="table table-hover table-success table-striped border">
        <thead>
            <tr>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @* @foreach (var m in Model.AllDeities)  *@
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" name="selectedDeity"
                        value="@Model[i].DeityId" id="deity_@i">
                        <label class="form-check-label" for="deity_@i">
                        @Model[i].Name
                        </label>
                        
                            @* @Html.CheckBoxFor(d => d.SelectedDeityIds.Contains(m.DeityId))
                            @Html.LabelFor(d => (d.SelectedDeityIds.Contains(m.DeityId)), m.Name)
                            <!-- Include a hidden field for the item ID or any other necessary data --> *@
                        </div>
                    </td>
                    <td class="text-end">
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <input type="submit" value="Add" class="btn btn-sm btn-secondary">


</form>
